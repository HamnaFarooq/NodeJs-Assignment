<a href="/teachers" class="btn"> Go Back </a>

    <div class="container-fluid">
      <div class="container">
        <h2>Edit Teacher</h2>
        <form action="/teachers/<%-teacher.TId%> " method="POST">

          <div class="form-group">
            <label for="Firstname">First Name:</label>
            <input type="text" class="form-control" name="Firstname" value="<%- teacher.Firstname %>"  placeholder="Enter First name" required>
          </div>

          <div class="form-group">
            <label for="Lastname">Last Name:</label>
            <input type="text" class="form-control" name="Lastname" value="<%- teacher.Lastname %>" placeholder="Enter First name" required>
          </div>

          <div class="form-group">
            <label for="Designation">Designation:</label>
            <input type="text" class="form-control" name="Designation" value="<%- teacher.Designation %>"  placeholder="Enter Designation" required>
          </div>

          <div class="form-group">
              <label for="Experience">Eperience:</label>
              <select class="form-control" name="Experience" value="<%- teacher.Experience %>" >
                  <option value="">---- Years ----</option>
                  <option value="1 year"> 1 year </option>
                  <% for(var i=2; i <= 100; i++) { %>
                    <option value="<%- i %>" > <%- i %> years </option>
                   <% } %>
              </select>
          </div>

          <button type="submit" class="btn btn-primary">Update</button>

        </form>
        </div>
    	</div>
