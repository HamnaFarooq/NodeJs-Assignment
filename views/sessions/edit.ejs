<a href="/sessions" class="btn"> Go Back </a>

    <div class="container-fluid">
      <div class="container">
        <h2>Edit session</h2>
        <form action="/sessions/<%- session.sesid %>" method="POST">

          <div class="form-group">
              <label for="stitle">session Name:</label>
              <input type="text" class="form-control" name="stitle" value="<%- session.stitle %>" placeholder="Enter session name" required pattern="[A-Z][0-9]{2}">
              <p>3 to 4 letters only!  (e.g: S12, F12 )</p>
          </div>

          <div class="form-group">
              <label for="sdate">Start Month:</label>
              <select class="form-control" name="sdate" selected="<%- session.sdate %>">
                  <option value="">---- months ----</option>
                  <option value="January">January</option>
                  <option value="February">February</option>
                  <option value="March">March</option>
                  <option value="April">April</option>
                  <option value="May">May</option>
                  <option value="June">June</option>
                  <option value="July">July</option>
                  <option value="August">August</option>
                  <option value="September">September</option>
                  <option value="Octuber">Octuber</option>
                  <option value="November">November</option>
                  <option value="December">December</option>
              </select>
          </div>

          <button type="submit" class="btn btn-primary">Update</button>

        </form>
        </div>
    	</div>
